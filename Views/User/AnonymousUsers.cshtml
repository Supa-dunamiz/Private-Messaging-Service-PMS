@using PMS.ViewModels;
@model List<UserViewModel>

<section class="flush-with-above">
    <div class="container">
        <div class="row">
            <div class="col">
                <table class="table table-hover align-items-center table-borderless">
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr class="bg-white">
                                <th scope="row">
                                    <div class="media align-items-center">
                                        <img alt="Image profile avatar" src="@user.ProfileImageUrl" width="100" height="100" class="avatar">
                                        <div class="media-body">
                                            <span class="h6 mb-0">@user.Username</span>
                                        </div>
                                    </div>
                                </th>
                                <td>
                                    <a class="btn btn-outline-primary" asp-controller="User" asp-action="UserProfile" asp-route-id="@user.Id">
                                        View Profile
                                    </a>
                                </td>
                                <td>
                                    <a asp-action="Delete" asp-controller="User" asp-area="" asp-route-id="@user.Id" type="button" class="btn btn-danger">
                                        Delete User

                                    </a>
                                </td>

                            </tr>
                            <tr class="table-divider">
                                <th></th>
                                <td></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!--end of col-->
        </div>
        <!--end of row-->
    </div>
    <!--end of container-->
</section>